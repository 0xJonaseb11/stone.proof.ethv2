{
  "name": "@se-2/hardhat",
  "version": "0.0.1",
  "scripts": {
    "account": "hardhat run scripts/listAccount.ts",
    "account:generate": "hardhat run scripts/generateAccount.ts",
    "account:import": "hardhat run scripts/importAccount.ts",
    "account:reveal-pk": "hardhat run scripts/reveal-pk.ts",
    "chain": "hardhat node --network hardhat --no-deploy",
    "check-types": "tsc --noEmit",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy",
    "flatten": "hardhat flatten",
    "fork": "hardhat node --network hardhat --fork https://eth-mainnet.g.alchemy.com/v2/${process.env.NEXT_PUBLIC_ALCHEMY_API_KEY} --no-deploy",
    "format": "prettier --write . '!(artifacts|cache)/**/*'",
    "generate": "hardhat run scripts/generateAccount.ts",
    "hardhat-verify": "hardhat verify",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint-staged": "eslint --fix",
    "test": "hardhat test --network hardhat",
    "verify": "hardhat etherscan-verify"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.3",
    "dotenv": "^17.2.3",
    "hardhat": "^2.19.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^3.0.4",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^24.9.2",
    "hardhat-deploy": "^1.0.4",
    "hardhat-deploy-ethers": "^0.4.0",
    "hardhat-gas-reporter": "^2.3.0",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.3.1",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
